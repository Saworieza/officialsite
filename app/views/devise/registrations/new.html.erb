<%= provide(:title, "Become a member") %>

<div class="medium-8 column medium-centered panel" id="sign-up-form">
<h2>Become a LakeHub Member</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= devise_error_messages! %>
<div class="row">
  <div class="field medium-6 column">
    <%= f.input :first_name, placeholder: "First Name"%>
  </div>
    <div class="field medium-6 column">
    <%= f.input :last_name, placeholder: "Last Name"%>
  </div>
</div>
<div class="row">
  <div class="field medium-6 column">
    <%= f.input :email, autofocus: true, placeholder: "Valid Email Address" %>
  </div>

  <div class="field medium-6 column">
    <%= f.input :mobile, required: true, placeholder: "Your mobile phone number" %>
  </div>
</div>

<div class="row">
  <div class="field medium-6 column">
    <%= f.input :password, autocomplete: "off", placeholder: "#{@minimum_password_length } characters minimum"%>
  </div>

  <div class="field medium-6 column">
    <%= f.input :password_confirmation, autocomplete: "off", placeholder: "Confirm your password" %>
  </div>
<div class="row">
    <div class="actions">
      <%= f.submit "Make me a member",class: "button radius small"%>
      <%= link_to "Not Now! Next Time", members_path, class: "button radius small right" %>
    </div>
<% end %>
    <p>Already a Member? <%= render "devise/shared/links" %></p>
</div>

</div>
