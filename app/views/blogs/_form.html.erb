	<%= simple_form_for(@blog) do |f| %>
		<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :title %>
		<%= f.input :tag_list, label: "Tags (separated by commas)", :input_html => { :class => "css-class", :value => @blog.tag_list.join(", ") } %>
		<%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, class: "button small" %>
	</div>
<% end %>
